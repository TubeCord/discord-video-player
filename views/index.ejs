          <a href="<%= pageContent.buttons.topRow[position].link %>" target="_blank">
            <button
              class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
              <%= pageContent.buttons.topRow[position].text %>
            </button>
          </a>
          <% } else { %>
            <button id="<%= position === 'right' ? 'infoButton' : '' %>"
              class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
              <%= pageContent.buttons.topRow[position].text %>
            </button>
            <% } %>
              <% }) %>
    </div>
    <!-- Main Content -->
    <div class="flex flex-col items-center gap-10 h-full mb-4">
      <!-- Logo Section -->
      <div class="flex flex-col items-center gap-1">
        <img src="<%= pageContent.logo %>" title="<%= name %> logo" alt="<%= name %> logo" draggable="false"
          class="mx-auto rounded-full w-24 md:w-1/5 cursor-pointer">
        <h2 class="text-2xl text-white font-primary-font">
          <%= name %>
        </h2>
        <h4 class="text-white opacity-100">
          <%= slogan %>
        </h4>
      </div>
      <!-- Video and Error Section -->
      <div class="flex flex-col items-center w-full md:w-7/12 2xl:w-5/12">
        <div id="errorCard" class="mb-2 error-card hidden">
          <i onclick="document.getElementById('errorCard').classList.add('hidden')" style="cursor:pointer;float:right;"
            class="fas fa-times"></i>
          <h3 id="errorTitle" class="text-lg"></h3>
          <div id="errorMessage"></div>
        </div>
        <div class="video-wrapper">
          <video id="player" class="video-player" controls preload="auto" playsinline
            src="/stream?url=<%= encodeURIComponent(link) %>" type="<%= videoFormat %>">
            <p>To view this video please enable JavaScript, and consider upgrading to a web browser that <a
                href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
          </video>
        </div>

        <!-- Buttons Container -->
        <div class="flex justify-between w-full mt-4 mb-2 md:mb-auto">
          <!-- Left Column -->
          <div class="flex flex-col space-y-4">
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="prevVideo">
              <%= pageContent.buttons.videoControls['1L'] %>
            </button>
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="viewHistory">
              <%= pageContent.buttons.videoControls['2L'] %>
            </button>
          </div>
          <!-- Right Column -->
          <div class="flex flex-col space-y-4">
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="nextVideo">
              <%= pageContent.buttons.videoControls['1R'] %>
            </button>
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="downloadVideo">
              <%= pageContent.buttons.videoControls['2R'] %>
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Bottom Buttons -->
    <div class="flex justify-between items-center bottom-0 p-3">
      <% ['left', 'right' ].forEach(function(position, index) { %>
        <div>
          <% if (pageContent.buttons.bottomRow[position].link) { %>
            <a href="<%= pageContent.buttons.bottomRow[position].link %>" target="_blank">
              <button
                class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
                <%= pageContent.buttons.bottomRow[position].text %>
              </button>
            </a>
            <% } else { %>
              <button
                class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
                <%= pageContent.buttons.bottomRow[position].text %>
              </button>
              <% } %>
        </div>
        <% }) %>
    </div>
  </main>
  <!-- Footer -->
  <div class="flex justify-center w-full py-2">
    <div class="w-full text-center">
      <p class="text-slate-50/50"><%- pageContent.footer.text %></p>
    </div>
  </div>
  <!-- modal -->
  <div id="infoModal"
    class="fixed inset-0 flex items-center justify-center p-4 hidden transition-opacity duration-500 ease-in-out opacity-100 z-50"
    style="background-color: rgba(0, 0, 0, 0.6); backdrop-filter: blur(4px);">
    <div
      class="bg-primary-dark text-slate-100 w-full md:w-2/3 lg:w-1/2 p-5 rounded shadow-lg relative z-10 overflow-y-auto"
      onclick="event.stopPropagation();">
      <button id="closeModal" class="absolute top-2 right-3">
        <i class="fas fa-times"></i>
      </button>
      <div class="flex flex-col gap-3">
        <h2 id="modalTitle" class="text-2xl"></h2>
        <div id="modalMessageWrapper" class="tracking-wide overflow-y-auto max-h-[50vh]">
          <p id="modalMessage"></p>
        </div>
      </div>
      <div class="mt-6" id="extraContent"></div>
    </div>
  </div>

  <!-- Three.js Background Script -->
  <script>
    // Starry Sky Background Refined
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('three-canvas'), alpha: true, antialias: true });

    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.setPixelRatio(window.devicePixelRatio);

    // Generate Round Star Texture
    function createStarTexture() {
      const canvas = document.createElement('canvas');
      canvas.width = 32;
      canvas.height = 32;
      const ctx = canvas.getContext('2d');

      const gradient = ctx.createRadialGradient(16, 16, 0, 16, 16, 16);
      gradient.addColorStop(0, 'rgba(255, 255, 255, 1)');
      gradient.addColorStop(0.2, 'rgba(255, 255, 255, 0.8)');
      gradient.addColorStop(0.5, 'rgba(255, 255, 255, 0.2)');
      gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');

      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, 32, 32);

      const texture = new THREE.CanvasTexture(canvas);
      return texture;
    }

    const starTexture = createStarTexture();

    // Create Star Layers for Gradual Appearance
    const starLayers = [];
    const layerCounts = [200, 500, 1000]; // Few, then more, then many
    const layerDelays = [10, 14, 18]; // Seconds to start appearing

    function createStarLayer(count) {
      const starGeo = new THREE.BufferGeometry();
      const starPos = new Float32Array(count * 3);

      for (let i = 0; i < count; i++) {
        starPos[i * 3] = (Math.random() - 0.5) * 600;
        starPos[i * 3 + 1] = (Math.random() - 0.5) * 600;
        starPos[i * 3 + 2] = (Math.random() - 0.5) * 600;
      }

      starGeo.setAttribute('position', new THREE.BufferAttribute(starPos, 3));

      const starMaterial = new THREE.PointsMaterial({
        color: 0xffffff,
        size: 1.5, // Slightly larger because of texture alpha
        map: starTexture,
        transparent: true,
        opacity: 0, // Start invisible
        depthWrite: false,
        blending: THREE.AdditiveBlending
      });

      const stars = new THREE.Points(starGeo, starMaterial);
      scene.add(stars);
      return { mesh: stars, material: starMaterial };
    }

    // Initialize layers
    layerCounts.forEach(count => starLayers.push(createStarLayer(count)));

    // Shooting Stars Array
    const shootingStars = [];

    function createShootingStar() {
      const geometry = new THREE.BufferGeometry();
      // Start from right side
      const startX = 100;
      const startY = (Math.random() * 100) - 20;
      const startZ = (Math.random() * 100) - 100;

      // Trail length
      const points = [
        new THREE.Vector3(0, 0, 0),
        new THREE.Vector3(15, 5, 0)
      ];

      geometry.setFromPoints(points);

      const material = new THREE.LineBasicMaterial({ color: 0xffffff, transparent: true, opacity: 0.8 });
      const line = new THREE.Line(geometry, material);

      // Position the line
      line.position.set(startX, startY, startZ);

      scene.add(line);
      // Move left and slightly down (Slower speed: -1.5 instead of -3)
      shootingStars.push({ mesh: line, velocity: new THREE.Vector3(-1.5, -0.5, 0), life: 1.0 });
    }

    // Idle Timer Logic
    let idleTime = 0;
    let starsVisible = false;

    function resetIdleTimer() {
      idleTime = 0;
      starsVisible = false;
      // Reset opacities immediately on activity
      starLayers.forEach(layer => layer.material.opacity = 0);
    }

    ['mousemove', 'keydown', 'click', 'scroll'].forEach(evt =>
      document.addEventListener(evt, resetIdleTimer)
    );

    setInterval(() => {
      idleTime++;
      if (idleTime > 10) {
        starsVisible = true;
      }
    }, 1000);

    // Animation Loop
    function animate() {
      requestAnimationFrame(animate);

      // Gradual Layered Fade In
      if (starsVisible) {
        starLayers.forEach((layer, index) => {
          if (idleTime > layerDelays[index]) {
            if (layer.material.opacity < 0.8) {
              layer.material.opacity += 0.002; // Very slow fade in
            }
          }
        });
      }

      // Rotate Stars (Bottom-Left to Top-Right simulation)
      // To move Bottom-Left to Top-Right on screen:
      // Stars need to move +X (Right) and +Y (Up).
      // Rotation conventions:
      // Rotate Y negative -> Stars move Right.
      // Rotate X negative -> Stars move Up.
      starLayers.forEach(layer => {
        layer.mesh.rotation.y -= 0.0002;
        layer.mesh.rotation.x -= 0.0001;
      });

      // Shooting Stars
      if (starsVisible && Math.random() < 0.005) { // 0.5% chance per frame (less frequent)
        createShootingStar();
      }

      for (let i = shootingStars.length - 1; i >= 0; i--) {
        const s = shootingStars[i];
        s.mesh.position.add(s.velocity);
        s.life -= 0.01; // Slower fade out
        s.mesh.material.opacity = s.life;

        if (s.life <= 0) {
          scene.remove(s.mesh);
          shootingStars.splice(i, 1);
        }
      }

      renderer.render(scene, camera);
    }

    animate();

    window.addEventListener('resize', () => {
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(window.innerWidth, window.innerHeight);
    });
  </script>

  <script src="/assets/js/index.js?v=<%= Math.floor(Math.random() * 999) %>"></script>
