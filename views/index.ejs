<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= name %>
  </title>
  <link rel="icon" type="image/png" href="/assets/images/logo.png">

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/index.css" />
  <script src="/assets/js/tailwind-config.js"></script>
  <style>
    #three-canvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: -1;
      pointer-events: none;
    }
  </style>
</head>

<body class="bg-primary-dark hide-scrollbar">
  <!-- Three.js Canvas Background -->
  <canvas id="three-canvas"></canvas>

  <main class="p-3 relative z-10">
    <!-- Top Buttons -->
    <div class="flex justify-between mb-4">
      <% ['left', 'right' ].forEach(function(position) { %>
        <% if (pageContent.buttons.topRow[position].link) { %>
          <a href="<%= pageContent.buttons.topRow[position].link %>" target="_blank">
            <button
              class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
              <%= pageContent.buttons.topRow[position].text %>
            </button>
          </a>
          <% } else { %>
            <button id="<%= position === 'right' ? 'infoButton' : '' %>"
              class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
              <%= pageContent.buttons.topRow[position].text %>
            </button>
            <% } %>
              <% }) %>
    </div>
    <!-- Main Content -->
    <div class="flex flex-col items-center gap-10 h-full mb-4">
      <!-- Logo Section -->
      <div class="flex flex-col items-center gap-1">
        <img src="<%= pageContent.logo %>" title="<%= name %> logo" alt="<%= name %> logo" draggable="false"
          class="mx-auto rounded-full w-24 md:w-1/5 cursor-pointer">
        <h2 class="text-2xl text-white font-primary-font">
          <%= name %>
        </h2>
        <h4 class="text-white opacity-100">
          <%= slogan %>
        </h4>
      </div>
      <!-- Video and Error Section -->
      <div class="flex flex-col items-center w-full md:w-7/12 2xl:w-5/12">
        <div id="errorCard" class="mb-2 error-card hidden">
          <i onclick="document.getElementById('errorCard').classList.add('hidden')" style="cursor:pointer;float:right;"
            class="fas fa-times"></i>
          <h3 id="errorTitle" class="text-lg"></h3>
          <div id="errorMessage"></div>
        </div>
        <div class="video-wrapper">
          <video id="player" class="video-player" controls preload="auto" playsinline
            src="/stream?url=<%= encodeURIComponent(link) %>" type="<%= videoFormat %>">
            <p>To view this video please enable JavaScript, and consider upgrading to a web browser that <a
                href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
          </video>
        </div>

        <!-- Buttons Container -->
        <div class="flex justify-between w-full mt-4 mb-2 md:mb-auto">
          <!-- Left Column -->
          <div class="flex flex-col space-y-4">
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="prevVideo">
              <%= pageContent.buttons.videoControls['1L'] %>
            </button>
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="viewHistory">
              <%= pageContent.buttons.videoControls['2L'] %>
            </button>
          </div>
          <!-- Right Column -->
          <div class="flex flex-col space-y-4">
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="nextVideo">
              <%= pageContent.buttons.videoControls['1R'] %>
            </button>
            <button
              class="bg-primary-button hover:bg-primary-button-hover text-white transition duration-150 py-2 px-6 md:w-56 lg:w-52 rounded"
              id="downloadVideo">
              <%= pageContent.buttons.videoControls['2R'] %>
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Bottom Buttons -->
    <div class="flex justify-between items-center bottom-0 p-3">
      <% ['left', 'right' ].forEach(function(position, index) { %>
        <div>
          <% if (pageContent.buttons.bottomRow[position].link) { %>
            <a href="<%= pageContent.buttons.bottomRow[position].link %>" target="_blank">
              <button
                class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
                <%= pageContent.buttons.bottomRow[position].text %>
              </button>
            </a>
            <% } else { %>
              <button
                class="bg-secondary-button hover:bg-secondary-button-hover transition duration-150 text-white py-2 px-4 rounded">
                <%= pageContent.buttons.bottomRow[position].text %>
              </button>
              <% } %>
        </div>
        <% }) %>
    </div>
  </main>
  <!-- Footer -->
  <div class="flex justify-center w-full py-2">
    <div class="w-full text-center">
      <p class="text-slate-50/50"><%- pageContent.footer.text %></p>
    </div>
  </div>
  <!-- modal -->
  <div id="infoModal"
    class="fixed inset-0 flex items-center justify-center p-4 hidden transition-opacity duration-500 ease-in-out opacity-100 z-50"
    style="background-color: rgba(0, 0, 0, 0.6); backdrop-filter: blur(4px);">
    <div
      class="bg-primary-dark text-slate-100 w-full md:w-2/3 lg:w-1/2 p-5 rounded shadow-lg relative z-10 overflow-y-auto"
      onclick="event.stopPropagation();">
      <button id="closeModal" class="absolute top-2 right-3">
        <i class="fas fa-times"></i>
      </button>
      <div class="flex flex-col gap-3">
        <h2 id="modalTitle" class="text-2xl"></h2>
        <div id="modalMessageWrapper" class="tracking-wide overflow-y-auto max-h-[50vh]">
          <p id="modalMessage"></p>
        </div>
      </div>
      <div class="mt-6" id="extraContent"></div>
    </div>
  </div>

  <!-- Three.js Background Script -->
  <script>
    // Three.js particle background
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('three-canvas'), alpha: true, antialias: true });

    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.setPixelRatio(window.devicePixelRatio);
    camera.position.z = 50;

    // Create particles
    const particlesGeometry = new THREE.BufferGeometry();
    const particlesCount = 1500;
    const posArray = new Float32Array(particlesCount * 3);

    for (let i = 0; i < particlesCount * 3; i++) {
      posArray[i] = (Math.random() - 0.5) * 150;
    }

    particlesGeometry.setAttribute('position', new THREE.BufferAttribute(posArray, 3));

    const particlesMaterial = new THREE.PointsMaterial({
      size: 0.3,
      color: 0x5865f2,
      transparent: true,
      opacity: 0.6,
      blending: THREE.AdditiveBlending
    });

    const particlesMesh = new THREE.Points(particlesGeometry, particlesMaterial);
    scene.add(particlesMesh);

    // Animation
    let mouseX = 0;
    let mouseY = 0;

    document.addEventListener('mousemove', (event) => {
      mouseX = (event.clientX / window.innerWidth) * 2 - 1;
      mouseY = -(event.clientY / window.innerHeight) * 2 + 1;
    });

    function animate() {
      requestAnimationFrame(animate);

      particlesMesh.rotation.y += 0.0005;
      particlesMesh.rotation.x = mouseY * 0.05;
      particlesMesh.rotation.y += mouseX * 0.0005;

      renderer.render(scene, camera);
    }

    animate();

    // Handle window resize
    window.addEventListener('resize', () => {
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(window.innerWidth, window.innerHeight);
    });
  </script>

  <script src="/assets/js/index.js?v=<%= Math.floor(Math.random() * 999) %>"></script>
  <script defer>
    console.log(
      '%cDebug Info%c\n\n' +
      '%cProject Name:\n%c<%= name %> (<%= version %>)%c\n\n' +
      '%cInitial Video Link:\n%c<%= link %> %c\n\n' +
      '%cInitial Video Format:\n%c<%= videoFormat %> %c\n\n' +
      '%cPage Config:\n%c<%- JSON.stringify(pageContent) %> %c\n\n' +
      '%cCommit Hash:\n%c<%= commitHash %> %c',
      'font-size: 30px; color: gray;', 'font-size: 14px;',
      'font-size: 20px; color: lightblue;', 'font-size: 14px; color: green;', 'font-size: 14px;',
      'font-size: 20px; color: lightblue;', 'font-size: 14px; color: green;', 'font-size: 14px;',
      'font-size: 20px; color: lightblue;', 'font-size: 14px; color: green;', 'font-size: 14px;',
      'font-size: 20px; color: lightblue;', 'font-size: 14px; color: green;', 'font-size: 14px;',
      'font-size: 20px; color: lightblue;', 'font-size: 14px; color: green;', 'font-size: 14px;'
    );

    sessionStorage.removeItem("videoHistory");
    videoHistory = [];
    checkVideo("/stream?url=<%= encodeURIComponent(link) %>");
  </script>
</body>

</html>